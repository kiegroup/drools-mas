<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
    default-autowire="byName">

   
    
   
  
    <bean id="agent-service" class="org.drools.fipa.pojo.service.SynchronousDroolsAgentServiceImpl">
        <property name="agent" ref="agent"/>
        <property name="responseInformer" ref="syncResponseInformer"/>
    </bean>    
    
    <bean id="agent1-session1" class="org.drools.fipa.core.DroolsAgentConfiguration$SubSessionDescriptor">
        <constructor-arg value="session1"/>
        <constructor-arg value="actionAgent_defSession_changeset.xml"/>
        <constructor-arg value="NOT_USED_YET"/>
    </bean>  
    
   

    <bean id="syncResponseInformer" class="org.drools.fipa.pojo.service.SynchronousDroolsAgentResponseInformer"/>

    <bean id="agent1-configuration" class="org.drools.fipa.core.DroolsAgentConfiguration">
        <property name="agentId" value="Agent 1"/>
        <property name="changeset" value="actionAgent_changeset.xml" />
        <property name="responseInformer" ref="syncResponseInformer"/>
        <property name="subSessions">
            <list>
                <ref local="agent1-session1"/>
            </list>
        </property>
    </bean>
  
    <bean id="agent-factory" class="org.drools.fipa.core.DroolsAgentFactory" factory-method="getInstance"/>
  
    <bean id="agent" class="org.drools.fipa.core.DroolsAgent" factory-bean="agent-factory" factory-method="spawn">
        <constructor-arg ref="agent1-configuration"/>
    </bean>

</beans>
